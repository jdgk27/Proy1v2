<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grupo7.proy1.edd.proy1v2.Renta">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo de renta"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="303dp"
        android:layout_below="@+id/txtdescri"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="117dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/spiprod"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtdescri"
        android:layout_width="211dp"
        android:layout_height="139dp"
        android:text="Descripción"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="155dp"
        android:layout_marginTop="26dp"
        android:layout_alignTop="@+id/txtnombre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ID del producto"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="47dp"
        android:layout_height="35dp"
        android:text="Días"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_alignBottom="@+id/spidias"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:id="@+id/btnrentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="onClickRentar"
        android:text="Rentar"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="390dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:onClick="onClickMenu"
        android:text="Regresar al Menu"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="447dp" />

    <Spinner
        android:id="@+id/spiprod"
        android:layout_width="232dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="68dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spidias"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_above="@+id/btnrentar"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />
</RelativeLayout>
